{{>head}}

	<main class="contenedor contenedor-formularios no-padding">
		<h1>{{nombrePagina}}</h1>

		<form action="/editar-grupo/{{grupo._id}}" method="POST" class="default-form">
			<div class="campo">
				<label>Nombre</label>
				<input type="text" value="{{grupo.nombre}}" name="nombre" placeholder="Nombre Grupo" />
			</div>

			<div class="campo descripcion">
				<label>Descripcion</label>
				<div class="contenedor-editor">
					<input type="hidden" id="x" name="descripcion" value="{{grupo.descripcion}}" />
					<trix-editor input="x"></trix-editor>
				</div>
			</div>

			<div class="campo">
				<label>Categoria</label>
				<select name="categoria">
					<option value="" disabled>-- Elige una categoria --</option>
					{{#categoriasSeleccionadas objCategoria}}
					{{/categoriasSeleccionadas}}
				</select>
			</div>

			<div class="campo">
				<label>Sitio Web</label>
				<input type="url" name="url" placeholder="Sitio Web" value="{{grupo.url}}" />
			</div>

			<div class="campo enviar">
				<input type="submit" value="Editar Grupo" class="btn btn-rosa" />
			</div>
		</form>
	</main>

{{>footer}}