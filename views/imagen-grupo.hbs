{{>head}}

	<main class="contenedor contenedor-formularios no-padding">
		<h1>{{nombrePagina}}</h1>

		<form action="/imagenes-grupo/{{grupo._id}}" method="POST" class="default-form" enctype="multipart/form-data">

			<div class="campo">
				<label>Imagen</label>
				<input type="file" name="imagen" />
			</div>

			{{#if grupo.imagen}}
				<div class="campo">
					<label>Imagen Actual</label>
					<img src="/uploads/grupos/{{grupo.imagen}}" width="200">
				</div>

				{{else}}
					<p>No hay imagen actual</p>
			{{/if}}

			<div class="campo enviar">
				<input type="submit" value="Subir Imagen" class="btn btn-rosa" />
			</div>
		</form>
	</main>

{{>footer}}