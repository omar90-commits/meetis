{{>head}}
    <div class="contenedor proximos-eventos">
        <h1>{{nombrePagina}}</h1>

        {{#if meetis.length}}
            {{#each meetis}}
                <div class="grid columnas-md-3 ">
                    <div class="card">
                        <div class="imagen">
                            {{#if imgGrupo}}
                                <img src="/uploads/grupos/{{imgGrupo}}">

                                {{else}}
                                    <img src="/img/logo.png">
                            {{/if}}
                        </div>

                        <div class="card-texto">

                            <p class="flecha">
                                {{#fechas fecha}}
                                {{/fechas}}
                                {{hora}} Horas
                            </p>
                            <a href="#">
                                <h3>{{titulo}}</h3>
                            </a>
                            <div class="info-autor">
                                <div class="imagen">
                                    {{#if usuarios.imagen}}
                                        <img src="/uploads/perfiles/{{usuarios.imagen}}">
                                    {{/if}}
                                </div>

                                <div class="informacion">
                                    <p>Organizado por:</p>
                                    <p class="autor">{{usuarios.nombre}}</p>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            {{/each}}

            {{else}}
                <p>No hay meeti's en esta categoria</p>
        {{/if}}
    </div>

{{>footer}}